#!/bin/bash
echo "Checking dependencies:"

function check $1 {
    echo -n "$1..."
    if ! command -v $2 >/dev/null 2>&1; then
        echo " not installed!"
        exit
    fi
    echo " ok."
}

check "Wireguard" wg-quick

echo "Checking Python:"
printf "version "; python3 --version

mkdir -p build

if [ -z "$CLIENT" ]; then
    echo -n "Enter client identifier: "
    read CLIENT
fi

echo "Downloading topology configuration..."
wget https://raw.githubusercontent.com/scion-backbone/config/master/nodes.json -O build/nodes.json
wget https://raw.githubusercontent.com/scion-backbone/config/master/gen/client-$CLIENT.json -O build/customer.json